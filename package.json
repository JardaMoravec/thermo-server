    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/ejs": "^3.1.5",
        "@types/express": "^4.17.25",
        "@types/express-ejs-layouts": "^2.5.4",
        "@types/express-session": "^1.18.2",
        "@types/node": "^22.0.0",
        "@types/sqlite3": "^3.1.10",
        "cpx": "^1.5.0",
        "eslint": "^9.13.0",
        "nodemon": "^3.1.4",
        "ts-node": "^10.9.2",
